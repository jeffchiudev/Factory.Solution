@{
    Layout = "_Layout";
}

<h1>Factory Engineer/Machine Task Manager:</h1>
<hr/>
@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Engineer Roster</h1>
<hr/>
@if (@Model.Count == 0)
{
    <h3>Engineer roster is currently empty.</h3>
} 

@foreach (Engineer engineer in Model)
{
    <h4>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</h4>
}

<p>@Html.ActionLink("See All Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("See All Machines", "Index", "Machines")</p>