@{
    Layout = "_Layout";
}


@using Factory.Models;
@model dynamic;

<h1>Factory Engineer/Machine Task Manager:</h1>
<hr/>
<h2>Engineer Roster</h2>
<hr/>
@if (@Model.Engineers.Count == 0)
{
    <h3>Engineer roster is currently empty.</h3>
} 

@foreach (Engineer engineer in Model.Engineers)
{
    <h4>@Html.ActionLink($"{engineer.EngineerName} ID#: {engineer.EngineerId} ", "Details", "Engineers", new { id = engineer.EngineerId })</h4>
}
<hr/>
<h2>Machine List:</h2>
<hr/>
@if (@Model.Machines.Count == 0)
{
  <h3>There are no machines on to display.</h3>
} 

@foreach (Machine machine in Model.Machines)
{
  <h4>@Html.ActionLink($"{machine.MachineName}", "Details", "Machines", new { id = machine.MachineId })</h4>
}
<hr/>
<p>@Html.ActionLink("Manage Engineers", "Index", "Engineers", null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Manage Machines", "Index", "Machines", null, new {@class = "btn btn-success"})</p>