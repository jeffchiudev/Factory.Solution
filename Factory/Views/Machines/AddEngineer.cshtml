@{
    Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer</h2>
<hr/>
<h4>Assign an Engineer to this Machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" class="btn btn-primary" />
}
<hr/>
<p>@Html.ActionLink("Back To List", "Index")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>