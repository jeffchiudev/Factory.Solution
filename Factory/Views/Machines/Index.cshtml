@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h3>There are no machines on to display.</h3>
} 

@foreach (Machine machine in Model)
{
  <h4>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h4>
}
<hr/>
<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>