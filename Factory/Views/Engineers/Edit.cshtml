@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit Engineer Details:</h2>
<hr/>
<h4>Editing: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.EngineerName)
    @Html.EditorFor(model => model.EngineerName)

    <input type="submit" value="Save" class="btn btn-primary" />
}
<hr/>
<p>@Html.ActionLink("Back to Engineer Roster", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Back Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>